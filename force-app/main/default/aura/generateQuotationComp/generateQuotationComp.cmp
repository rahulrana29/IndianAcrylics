<aura:component Controller="QuotePdfPageExtension" implements="force:lightningQuickActionWithoutHeader,force:hasRecordId" access="global">
	<aura:attribute name="isModalOpen" type="boolean" default="false"/>
    <!--Style-->
    <aura:html tag="style">
        .slds-modal__container{
        height: auto;
        width: 60%;
        max-width: 60rem;
        }
        .modal-body{
        height : 600px !important;
        max-height: 600px !important;
        }
        .customFooter{
        display: inline !important;
        }
    </aura:html> 
    <div class="slds-modal__header">
        <h2 class="title slds-text-heading--medium" title= "{!v.Quote.Name}">{!v.Quote.Name}</h2>
    </div>
    <div class="slds-modal__content slds-p-around_x-small" >
        <div>
            <iframe src="{! '/apex/generateQuotePdf?Id='+v.recordId}" width="100%" height="400px;" frameBorder="5"/>
        </div>
    </div>
     <div class="slds-col modal-footer slds-modal__footer">
       
        <lightning:button variant="brand" label="Cancel" onclick="{!c.cancleClick}"/>
        <lightning:button variant="brand" label="Save" onclick="{! c.savePDF }" />
    </div>
   
</aura:component>